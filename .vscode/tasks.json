
{
    "version": "2.0.0",

    "tasks":
    [
        {
            "type": "cppbuild",
            "label": "C/C++ Build",
            "command": "/usr/bin/g++-10",

            "args":
            [
                "-fdiagnostics-color=always",

                "-g",
                "-std=c++20",

                "basicly.cpp",
                "source.cpp",
                "token.cpp",
                "ast.cpp",
                "parse.cpp",

                "-lgccjit",

                "-o", "basicly"
            ],

            "options":
            {
                "cwd": "${workspaceFolder}"
            },

            "isBackground": false,
            "promptOnClose": false,

            "presentation":
            {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },

            "problemMatcher":
            [
                "$gcc"
            ],

            "group":
            {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
